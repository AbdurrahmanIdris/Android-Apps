<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/result_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/result_box"/>

    </LinearLayout><!--End of higher layout-->

    <!--Inside this layout, there are 3 horizontal layouts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <!--numbers layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.4">

            <!--7 8 9 layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.15">

                <Button
                    android:id="@+id/seven_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="7" />

                <Button
                    android:id="@+id/eight_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="8" />

                <Button
                    android:id="@+id/nine_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="9" />
            </LinearLayout> <!--End of 7 8 9 layout-->

            <!--4 5 6 layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.15">

                <Button
                    android:id="@+id/four_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="4" />

                <Button
                    android:id="@+id/five_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="5" />

                <Button
                    android:id="@+id/six_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="6" />
            </LinearLayout><!--End of 4 5 6 layout-->

            <!--1 2 3 layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.15">

                <Button
                    android:id="@+id/one_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="1" />

                <Button
                    android:id="@+id/two_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="2" />

                <Button
                    android:id="@+id/three_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="3" />
            </LinearLayout><!--End of 1 2 3 layout-->

            <!--0 00 . layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.15">

                <Button
                    android:id="@+id/zero_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="0" />

                <Button
                    android:id="@+id/doubleZero_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="00" />

                <Button
                    android:id="@+id/decimalPoint_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_margin="1dp"
                    android:background="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:text="." />
            </LinearLayout> <!--End of 0 00 . layout-->
        </LinearLayout><!--End of numbers layout-->

        <!--operators layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/division_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_margin="1dp"
                android:background="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:text="/"/>

            <Button
                android:id="@+id/multiplication_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_margin="1dp"
                android:background="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:text="*"/>

            <Button
                android:id="@+id/subtraction_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_margin="1dp"
                android:background="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:text="-"/>

            <Button
                android:id="@+id/addition_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:layout_margin="1dp"
                android:background="@android:color/holo_orange_dark"
                android:textSize="30sp"
                android:text="+"/>

        </LinearLayout> <!--End of operators layout -->

        <!--Del an = layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="1dp"
                android:background="@android:color/holo_red_light"
                android:textSize="30sp"
                android:text="Del"/>

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:textSize="30sp"
                android:text="="/>
        </LinearLayout> <!--End of Del and = layout -->

    </LinearLayout><!--lower layout -->
</LinearLayout>